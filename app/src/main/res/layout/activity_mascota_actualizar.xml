<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:orientation="vertical"
    tools:context=".MascotaActualizar">


    <TextView
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="DATOS PROPIETARIO"></TextView>

    <EditText
        android:id="@+id/txttelefono"
        android:layout_width="131dp"
        android:enabled="false"
        android:layout_height="wrap_content"
        android:hint="telefono"></EditText>

    <EditText
        android:enabled="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="edad"
        android:id="@+id/txtedadPropietario"></EditText>

    <EditText
        android:enabled="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Curp"
        android:id="@+id/txtcurp"></EditText>

    <EditText
        android:enabled="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="nombrePropietario"
        android:id="@+id/txtnombrePropietario"></EditText>



    <TextView
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="DATOS MASCOTA"></TextView>

    <EditText
        android:id="@+id/etID"
        android:layout_width="78dp"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:hint="ID"></EditText>

    <EditText
        android:id="@+id/etCurpPropietario"
        android:layout_width="224dp"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:hint="Curp Propietario"></EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:orientation="vertical">


            <EditText
                android:id="@+id/etNombre"
                android:layout_width="152dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:hint="nombre"></EditText>

            <EditText
                android:id="@+id/etRaza"
                android:layout_width="152dp"
                android:layout_height="wrap_content"
                android:hint="Raza"></EditText>
        </LinearLayout>

        <Button
            android:id="@+id/btnActualizar"
            android:layout_width="193dp"
            android:layout_height="69dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="ACTUALIZAR"></Button>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="260dp"
        android:layout_height="178dp"
        android:layout_gravity="center"
        android:src="@drawable/veterinaria"></ImageView>

    <Button
        android:id="@+id/btnRegresar"
        android:layout_width="193dp"
        android:layout_height="69dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Regresar"></Button>


</LinearLayout>