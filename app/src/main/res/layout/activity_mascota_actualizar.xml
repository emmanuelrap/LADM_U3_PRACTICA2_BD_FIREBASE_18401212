<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:padding="15dp"
    android:orientation="vertical"
    tools:context=".MascotaActualizar">


    <TextView
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="DATOS PROPIETARIO"></TextView>


<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:enabled="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Curp"
            android:id="@+id/etCurp"></EditText>

        <EditText
            android:enabled="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="NombrePropietario"
            android:id="@+id/etNombrePropietario"></EditText>

        <EditText
            android:id="@+id/etTelefono"
            android:layout_width="131dp"
            android:enabled="false"
            android:layout_height="wrap_content"
            android:hint="telefono"></EditText>

        <EditText
            android:enabled="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="edad"
            android:id="@+id/etEdadPropietario"></EditText>

    </LinearLayout>

    <ImageView
        android:layout_width="114dp"
        android:layout_height="137dp"
        android:layout_margin="20dp"
        android:src="@drawable/logotec"></ImageView>
</LinearLayout>




    <TextView
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="ACTUALIZAR DATOS MASCOTA"></TextView>

    <EditText
        android:id="@+id/etID"
        android:layout_width="78dp"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:hint="ID"></EditText>

    <EditText
        android:id="@+id/etCurpPropietario"
        android:layout_width="224dp"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:hint="Curp Propietario"></EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:orientation="vertical">


            <EditText
                android:inputType="textPersonName"
                android:id="@+id/etNombre"
                android:layout_width="152dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:hint="nombre"></EditText>

            <EditText
                android:inputType="text"
                android:id="@+id/etRaza"
                android:layout_width="152dp"
                android:layout_height="wrap_content"
                android:hint="Raza"></EditText>
        </LinearLayout>

        <Button
            android:id="@+id/btnActualizar"
            android:layout_width="156dp"
            android:layout_height="69dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="ACTUALIZAR"></Button>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="192dp"
        android:layout_height="116dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/gatito"></ImageView>

    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/btnRegresar"
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:text="Regresar"></Button>


</LinearLayout>