<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="15dp"
    android:orientation="vertical"

    android:layout_height="match_parent"
    tools:context=".ui.Mascota.SlideshowFragment">


    <TextView
        android:textStyle="bold"
        android:paddingBottom="10dp"
        android:layout_gravity="center"
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar Nueva Mascota"></TextView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/etCurp"
                android:layout_width="150dp"
                android:enabled="false"
                android:layout_height="wrap_content"
                android:hint="Curp"></EditText>

            <EditText
                android:id="@+id/etNombreMascota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre Mascota"></EditText>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Raza Mascota"
                android:id="@+id/etRaza"></EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:textStyle="bold"
                android:textSize="18sp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DueÃ±os"></TextView>

            <ListView
                android:id="@+id/listaPropietario"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_gravity="center"
            android:layout_width="115dp"
            android:layout_height="103dp"
            android:src="@drawable/gatito"></ImageView>

        <Button
            android:id="@+id/btnInsertarMascota"
            android:layout_width="230dp"
            android:layout_height="76dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"

            android:gravity="center"
            android:text="INSERTAR"
            android:textColor="@color/white"
            android:textSize="21sp"
            android:textStyle="bold" />
    </LinearLayout>




    <TextView
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modificaciones Mascota"></TextView>

    <EditText
      android:layout_gravity="center"
        android:id="@+id/etBuscar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Dato a Buscar (curp,nombre,raza..)"></EditText>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnBuscarCurp"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginRight="5dp"
            android:text="BUSCAR CURP"
            android:layout_marginLeft="30dp"
            android:textSize="12dp"></Button>
        <Button
            android:paddingRight="15dp"
            android:layout_marginRight="5dp"
            android:textSize="12dp"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="Buscar NOMBRE"
            android:id="@+id/btnBuscarNombre"></Button>
        <Button
            android:layout_marginRight="5dp"
            android:textSize="12dp"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="Buscar Raza"
            android:id="@+id/btnBuscarRaza"></Button>

    </LinearLayout>

    <ListView
        android:layout_marginTop="10dp"
        android:id="@+id/listaMascotas"
        android:layout_width="256dp"
        android:layout_height="199dp"
        android:layout_gravity="center" />


</LinearLayout>